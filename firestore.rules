rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - existing old cohort users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Trainers collection - new customers (no auth required)
    match /trainers/{trainerId} {
      allow read, write: if true; // Allow all access for now
      
      // Stats history subcollection
      match /statsHistory/{statsHistoryId} {
        allow read, write: if true; // Allow all access for now
      }
    }
    
    // Attempts collection - quest attempts
    match /attempts/{attemptId} {
      allow read, write: if true; // Allow all access for now
    }
  }
}
